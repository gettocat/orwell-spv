<form class='no-scoll-y no-scoll-x'>

    <div class='ro1w'>

        <!-- <% if (errors){ %> -->
        <!-- <%for (var i in errors){%> -->
        <script>
            alertField('<%errors[i].field%>')
        </script>
        <div class='alert alert-warning' role="alert">
            <%=errors[i].message%>
        </div>
        <!-- <%}%> -->
        <!-- <%}%> -->

        <div class='alert alert-info' role="alert">
            After importing better - restart wallet.
        </div>
    </div>

    <div class='form-group row'>

        <div class='col-12  col-form-label  col-sm-3'>
            Label
        </div>
        <div class='col-11 offset-1 col-sm-9 form-content'>
            <input type='text' class='form-control' id='label'>
        </div>

    </div>

    <div class='form-group row'>

        <div class='col-12 col-form-label col-sm-3'>
            WIF or hex
        </div>
        <div class='col-11 offset-1 col-sm-9 form-content'>
            <input type='text' class='form-control' id='privateKey'>
        </div>

    </div>

    <div class='form-group row'>

        <div class='col-2 col-form-label col-sm-3'>

        </div>
        <div class='col-11 offset-1 col-sm-9 form-content'>
            <button onclick='send("popup.data", {id: window.pageId, label: $("#label").val(), value: $("#privateKey").val()}); return false;' class='btn btn-success'>
                <i class='fa fa-plus'></i> import
            </button>
            <button onclick='send("popup.close", {id: window.pageId}); return false;' class='btn btn-default'>
                <i class='fa fa-times'></i> cancel
            </button>
        </div>

    </div>

</form>