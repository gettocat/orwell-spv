{
    "name": "orwell-wallet",
    "version": "0.0.1",
    "description": "SPV wallet for orwell network",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist-windows": "build -w",
        "dist-linux": "build -l"
    },
    "repository": "https://github.com/gettocat/orwell-spv",
    "homepage": "http://orwellcoin.org",
    "keywords": [
        "blockchain",
        "p2p",
        "orwell",
        "spv"
    ],
    "dependencies": {
        "lokijs": "^1.5.1",
        "ejs": "^2.5.7",
        "hash.js": "^1.1.3",
        "base-58": "^0.0.1",
        "elliptic": "^6.4.0",
        "bitpony": "^0.0.1",
        "split": "^1.0.1",
        "int64-buffer": "^0.1.9",
        "merkle-tools": "^1.4.0",
        "orwelldb": "^0.0.8",
        "bloom-filter": "^0.2.0",
        "electron-notify": "^0.1.0"
    },
    "author": {
        "name": "Nanocat <gettocat@github.com>",
        "email": "alex@letris.ru"
    },
    "license": "MIT",
    "devDependencies": {
        "electron": "~1.7.8",
        "electron-builder": "^19.46.9",
        "http2": "latest"
    },
    "build": {
        "appId": "orwellspv",
        "dmg": {
            "contents": [{
                    "x": 110,
                    "y": 150
                },
                {
                    "x": 240,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "win": {
            "target": [{
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "msi",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ],
            "icon": "build/icon.ico",
            "legalTrademarks": "Â© 2017 Nanocat",
            "publisherName": "Orwell coin"

        },
        "linux": {
            "category": "Utility",
            "target": [{
                    "target": "appImage",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "tar.gz",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ],
            "synopsis": "Orwell spv wallet"
        }
    }
}